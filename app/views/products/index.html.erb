<div class="container"><h1>Retail Shop</h1>
	<strong>Customer : </strong>
	<input type="text" id="customer_name">
	<strong>Date : </strong>
	<input type="text" id="date" >
		<strong>Address : </strong>
	<textarea rows="4" cols="50" id="address"></textarea><br><br>
	

	<div class="ui-widget">
